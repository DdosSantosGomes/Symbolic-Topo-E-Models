{
    "[haskell]": {
        "editor.defaultFormatter": "haskell.haskell",
        "editor.formatOnSave": true,
        "editor.rulers": [
            80,
            120
        ],
        "editor.tabSize": 4
    },
    "[literate haskell]": {
        "editor.rulers": [
            80,
            120
        ]
    },
    "cSpell.enableFiletypes": [
        "!haskell"
    ],
    "cSpell.language": "en-GB",
    "cSpell.words": [
        "Alexandrov",
        "bisimilar",
        "bisimulation",
        "bisimulations",
        "clopen",
        "Fira",
        "footline",
        "footlines",
        "Kripke",
        "Lato",
        "Palatino",
        "ponens",
        "topo",
        "topomodel",
        "topomodels",
        "topospace",
        "topospaces"
    ],
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.outDir": "%WORKSPACE_FOLDER%/docs"
}